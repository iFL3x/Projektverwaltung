@model Projektverwaltung.Database.VorgehensmodellPhase


<div>
    <div class="form-group">
        <div class="col-md-10">
            <h4>@Model.name</h4>
            <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#phase_@Model.id"><span class="glyphicon glyphicon-resize-vertical"></span> Show / Hide</button>
        </div>
    </div>
    <div id="phase_@Model.id" class="collapse phase">
        @Html.HiddenFor(phase => phase.id)
        @Html.HiddenFor(phase => phase.vorgehensmodell_id)
        <div class="form-group">
            @Html.LabelFor(phase => phase.name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(phase => phase.name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(phase => phase.name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(phase => phase.beschreibung, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(phase => phase.beschreibung, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(phase => phase.beschreibung, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-10">
                <a href="@Url.Action("RemovePhase", "Vorgehensmodelle", new { phaseId = Model.id, vorgehensmodellId = Model.vorgehensmodell_id })" class="btn btn-danger">
                    <span class="glyphicon glyphicon-minus-sign"></span> Phase entfernen
                </a>
            </div>
        </div>

    </div>
</div>
<hr />