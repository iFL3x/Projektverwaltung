@model Projektverwaltung.Database.AktivitaetMitarbeiter


<div>
    <div class="form-group">
        <div class="col-md-10">
            <h4>@Model.funktion</h4>
            <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#aktivitaet_mitaerbeiter_@Model.id"><span class="glyphicon glyphicon-resize-vertical"></span> Show / Hide</button>
        </div>
    </div>
    <div id="aktivitaet_mitaerbeiter_@Model.id" class="collapse aktivitaet-mitarbeiter">
        @Html.HiddenFor(model => model.id)
        @Html.HiddenFor(model => model.aktivitaet_id)

        <div class="form-group">
            @Html.LabelFor(model => model.mitarbeiter_id, "Mitarbeiter", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("mitarbeiter_id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.mitarbeiter_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.funktion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.funktion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.funktion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.kostenart_id, "Kostenart", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("kostenart_id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.kostenart_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.budgetierte_zeit, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.budgetierte_zeit, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.budgetierte_zeit, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.effektive_zeit, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.effektive_zeit, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.effektive_zeit, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.abweichungsgrund, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.abweichungsgrund, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.abweichungsgrund, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <a href="@Url.Action("RemoveTask", "Projekte", new { taskId = Model.id, projektId = Model.Aktivitaet.ProjektPhase.projekt_id })" class="btn btn-danger">
                    <span class="glyphicon glyphicon-minus-sign"></span> Task entfernen
                </a>
            </div>
        </div>
    </div>
</div>